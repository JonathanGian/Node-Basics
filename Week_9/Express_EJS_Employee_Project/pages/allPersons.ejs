<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Styles/Styles.css">
    <title>Employees</title>
</head>
<body>
    <div class="container">
    <h1>All Employees</h1>
    <a href="/"><button>Menu</button></a>
</div>
    <main>
        <% if (result.length === 0){ %>
            <h2>No employees found</h2>
        <% } else {%>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Department</th>
                        <th>Salary</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach(person =>{ %>
                        <tr>
                            <td><%= person.id %></td>
                            <td><%= person.firstname %></td>
                            <td><%= person.lastname %></td>
                            <td><%= person.department %></td>
                            <td><%= person.salary %></td>
                        </tr>

                   <% }) %>
                </tbody>
            </table>
        <% } %>
        <a href="/"><button>Menu</button></a>
    </main>
    
</body>
</html>